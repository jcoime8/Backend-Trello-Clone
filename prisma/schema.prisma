// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// üë§ MODELO DE USUARIO (Para el Login)
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String   // Aqu√≠ guardaremos la contrase√±a encriptada
  name      String?
  tasks     Task[]   // Un usuario tiene muchas tareas
  createdAt DateTime @default(now())
}

// üìù MODELO DE TAREA (Privada)
model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  isCompleted Boolean  @default(false)
  
  // Relaci√≥n: Esta tarea PERTENECE a un Usuario
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  
  createdAt   DateTime @default(now())
  status      String   @default("pending")
}